[core]
  excludesfile = ~/.config/git/global.gitignore
  pager = less -FRSX
  autocrlf = input
  editor = nvr --remote-tab-wait-silent
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[push]
  default = simple
[mergetool]
  keepBackup = false
[init]
  templatedir = ~/.config/git/templatedir
[rerere]
  enabled = true
  autoupdate = true
