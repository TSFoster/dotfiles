[core]
  editor = nvim
  pager = less -FRSX
  excludesfile = ~/.dotfiles/git/global.gitignore
  autocrlf = input
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[push]
  default = simple
[mergetool]
  keepBackup = false
[init]
  templatedir = ~/.dotfiles/git/template
[rerere]
  enabled = true
  autoupdate = true
